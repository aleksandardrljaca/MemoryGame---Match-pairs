<Window DataContext="{Binding RelativeSource={RelativeSource Self}}" x:Class="MemoryGame.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame"
        mc:Ignorable="d"
        Title="Results" Height="450" Width="331.25" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,0">
        <DataGrid Name="dataGrid" Margin="10,0,10,0" RenderTransformOrigin="0.537,0.498">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Player name" Binding="{Binding PlayerName}" Width="150"/>
                <DataGridTextColumn Header="Points" Binding="{Binding Points}" Width="150"/>
                <!-- Dodajte druge stupce prema potrebi -->
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
